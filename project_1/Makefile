CC = g++


# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = rpc_gen_client
SERVER = rpc_gen_server

SOURCES_CLNT.c = 
SOURCES_CLNT.h = 
SOURCES_SVC.c = 
SOURCES_SVC.h = 
SOURCES.x = rpc_gen.x

TARGETS_SVC.c = rpc_gen_svc.c rpc_gen_server.c rpc_gen_xdr.c 
TARGETS_CLNT.c = rpc_gen_clnt.c rpc_gen_client.c rpc_gen_xdr.c 
TARGETS = rpc_gen.h rpc_gen_xdr.c rpc_gen_clnt.c rpc_gen_svc.c rpc_gen_client.c rpc_gen_server.c 


G_SERV_PREFIX = group_server 
CLIENT_PREFIX = client
UTIL_PREFIX = util

TARGETS_G_SERV = group_server/udp_intf.cc group_server/client_list.cc
TARGETS_UTIL = util/payload_util.cc util/common_util.cc
TARGETS_CLIENT = client/udp_handler.cc

OBJECTS_UTIL = $(TARGETS_UTIL:%.cc=%.o) 
OBJECTS_G_SERV = $(TARGETS_G_SERV:%.cc=%.o)
OBJECTS_CLIENT = $(TARGETS_CLIENT:%.cc=%.o)

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags 

CFLAGS += -std=c++11 -g -lpthread
LDLIBS += -lnsl -lpthread
RPCGENFLAGS = -N -a

INC_DIR = util/
# Targets 

.PHONY: G_SERV_MAKE CLIENT_MAKE UTIL_MAKE


all : UTIL_MAKE G_SERV_MAKE CLIENT_MAKE $(CLIENT) $(SERVER) 

G_SERV_MAKE:
	$(MAKE) -C $(G_SERV_PREFIX)

UTIL_MAKE:
	$(MAKE) -C $(UTIL_PREFIX)

CLIENT_MAKE:
	$(MAKE) -C $(CLIENT_PREFIX)

rpc: $(TARGETS)

$(TARGETS) : $(SOURCES.x) 
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c) 

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c) 



$(CLIENT) : $(OBJECTS_CLNT) 
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLIENT) $(OBJECTS_UTIL) $(OBJECTS_CLNT) $(LDLIBS) 

$(SERVER) : $(OBJECTS_SVC) 
	$(LINK.c) -I$(INC_DIR) -o $(SERVER) $(OBJECTS_UTIL) $(OBJECTS_G_SERV) $(OBJECTS_SVC) $(LDLIBS)

 clean:
	 $(RM) core $(OBJECTS_G_SERV) $(OBJECTS_UTIL) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)

